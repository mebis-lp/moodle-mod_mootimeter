<div class="border rounded m-2 p-2 " style="background: rgba(0, 0, 0, 0.03)">
    {{> mod_mootimeter/snippet_title_question}}
    <hr>
    <div class="mootimeterfullwidth" id="mtmt_wordcloud_badges">
        {{#answers}}
        {{> mod_mootimeter/badge_answer}}
        {{/answers}}
    </div>
    <div class="mootimeterfullwidth">
        <div>
            <label for="mootimeter_type_answer" class="form-label">{{#str}} type_answer , mootimetertool_wordcloud {{/str}}</label>
            <input id="mootimeter_type_answer" type="text" class="form-control mootimeterfullwidth" name="answer" data-pageid="{{pageid}}">
        </div>
    </div>
    {{{teacherpermission}}}
    {{#js}}
    require(['mootimetertool_wordcloud/store_answer'], (module) => module.init());
    require(['mootimetertool_wordcloud/toggle_teacherpermission'], (module) => module.init());
    {{/js}}
</div>